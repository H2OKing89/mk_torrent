{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "useGitignore": true,

  "ignorePaths": [
    "**/.git/**",
    "**/.venv/**",
    "**/node_modules/**",
    "**/dist/**",
    "docs/_summaries/**"
  ],

  "dictionaryDefinitions": [
    { "name": "project-terms", "path": ".cspell/project-terms.txt", "addWords": true }
  ],
  "dictionaries": ["en_US", "softwareTerms", "python", "project-terms"],

  "overrides": [
    { "filename": "**/*.md", "dictionaries": ["en_US","softwareTerms","python","project-terms"] },
    {
      "filename": "docs/reference/qBittorrent-api/**",
      "words": [
        "qbittorrent","qbittorrentapi","adminadmin","HTTPADAPTER","WEBUI","NOTIMPLEMENTEDERROR",
        "QBITTORRENT","QBITTORRENTAPI","RSSAPI","prefs","ifaces","addrs","descr","btih","backoffs",
        "torrentcreator"
      ]
    }
  ],

  "words": [
    "Pydantic","pydantic","Dataclass","dataclass","dataclasses","asdict","pathlib","bbcode",
    "pytest","Pytest","pyproject","Audnexus","audnexus","pathinfo","ffprobe","kwargs","asyncio",
    "venv","maindata","Goodreads","urlencode","Traefik","releasetype"
  ]
}
